# Copy this file to .env and fill in your actual values

# Database Configuration (Supabase PostgreSQL)
# Get this from your Supabase project settings -> Database -> Connection string
# Format: postgresql://postgres:PASSWORD@HOST:5432/postgres
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.your_project_ref.supabase.co:5432/postgres

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Pinecone Vector Database (Phase 2)
# Sign up at: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here

# Redis Caching (Phase 3)
# For Redis Cloud (production):
REDIS_URL=rediss://default:YOUR_REDIS_PASSWORD@YOUR_REDIS_HOST:YOUR_REDIS_PORT

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production

# Optional: Application Settings
PORT=8000
ENVIRONMENT=development 